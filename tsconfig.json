{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "paths": { "*": ["types/*"] },
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2017", "dom", "esnext.asynciterable"]
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "forceIsolatedModules": true,
        "reportFiles": ["src/**/*.{ts,tsx}"]
    }
}
